{{ ansible_managed | comment }}

global:
  scrape_interval:     15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - '127.0.0.1:9093'

rule_files:
- 'rules/*.yml'

scrape_configs:
  - job_name: 'prometheus'
    metrics_path: /metrics
    static_configs:
    - targets:
      - '[127.0.0.1]:9090'
      - '[127.0.0.1]:9100'
      - '[127.0.0.1]:9115'

  - job_name: 'blackbox_icmp'
    metrics_path: /probe
    params:
      module:
      - icmp
    static_configs:
      - targets:
        - google.co.jp
        labels:
          instance: hoge
          project: fuga
    relabel_configs:
    - source_labels: [__address__]
      target_label: __param_target
    - source_labels: [__param_target]
      target_label: instance
    - target_label: __address__
      replacement: '[127.0.0.1]:9115'
